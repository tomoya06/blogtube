<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heavelop.blogtube.dao.AdminDao">
  <select id="findAdminByID" resultType="Admin">
    SELECT * FROM user WHERE id = #{id} AND role = 1
  </select>
  <select id="findAdminByName" resultType="Admin">
    SELECT * FROM user WHERE name LIKE #{name} AND role = 1
  </select>
</mapper>